<UserControl x:Class="App.Chat.Client.ChatSenderBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App.Chat.Client"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    
    <Border Padding="10" Background="#D6D6D6" CornerRadius="10 10 0 10">
        <TextBlock TextWrapping="Wrap" Text="{Binding Content}" TextAlignment="Right"/>
    </Border>
    
</UserControl>
